<div class="author">
    <h1 class="author__heading">EA straight cooked this blog</h1>
    <p class="author__body">Front-End Developer, Fullstack Dev Soon</p>
</div>

<img src="../images/meme.jpg" alt="" class="hero-image">

<section class="articles">
    <h2 class="articles__heading">Latest Post</h2>
    
    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <a href="#" class="pagination"> &lt; View Older Posts</a>

</section>